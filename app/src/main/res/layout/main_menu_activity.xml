<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/kmToMilesButton"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="35dp"
        android:onClick="setKmToMetres"
        android:text="kmh to mph or vise versa" />

    <Button
        android:id="@+id/poundsToKilogramButton"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/kmToMilesButton"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_toEndOf="@+id/kmToMilesButton"
        android:layout_toRightOf="@+id/kmToMilesButton"
        android:onClick="setPoundToKilogram"
        android:text="Pounds TO Kilogram" />

    <Button
        android:id="@+id/averageCalulatorButton"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:onClick="averageCalulatorButton"
        android:text="Average Calulator"
        android:layout_below="@+id/kmToMilesButton"
        android:layout_alignLeft="@+id/kmToMilesButton"
        android:layout_alignStart="@+id/kmToMilesButton" />

    <Button
        android:id="@+id/gallonsToLitresButton"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/averageCalulatorButton"
        android:layout_alignStart="@+id/poundsToKilogramButton"
        android:onClick="gallonsToLitreButton"
        android:text="Gallon to Litre" />
</RelativeLayout>
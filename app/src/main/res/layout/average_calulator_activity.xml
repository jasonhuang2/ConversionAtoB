<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Average Calculator"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/percentageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Percentage"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@+id/textView14"
        android:layout_toStartOf="@+id/textView14" />

    <TextView
        android:id="@+id/worthTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:text="How much is it worth?"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/percentageTitle"
        android:layout_alignBottom="@+id/percentageTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/percentageInput1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@+id/percentageTitle"
        android:layout_alignLeft="@+id/resultTitle"
        android:layout_alignStart="@+id/resultTitle" />

    <EditText
        android:id="@+id/percentageInput2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/percentageInput1"
        android:layout_alignStart="@+id/percentageInput1"
        android:layout_below="@+id/percentageInput1"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/worthInput1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@+id/worthTitle"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />

    <EditText
        android:id="@+id/worthInput2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/worthInput1"
        android:layout_alignStart="@+id/worthInput1"
        android:layout_below="@+id/worthInput1"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/resultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Your average is:"
        android:layout_marginBottom="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>